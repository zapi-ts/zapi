{
  "name": "@nevr/cli",
  "version": "0.1.4",
  "description": "CLI for Nevr - Nevr write boilerplate again",
  "type": "module",
  "bin": {
    "nevr": "./dist/index.js"
  },
  "main": "dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --clean --shims",
    "dev": "tsup src/index.ts --format esm --watch --shims",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "nevr": "workspace:*",
    "@nevr/generator": "workspace:*",
    "commander": "^14.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.7.0"
  },
  "keywords": ["nevr", "cli", "generator", "prisma", "api"],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nevr-ts/nevr",
    "directory": "packages/cli"
  }
}
