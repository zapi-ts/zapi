{
  "name": "@zapi/cli",
  "version": "0.1.0-beta.1",
  "description": "CLI for zapi - Zero to API in seconds",
  "type": "module",
  "bin": {
    "zapi": "./dist/index.js"
  },
  "main": "dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --clean --shims",
    "dev": "tsup src/index.ts --format esm --watch --shims",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@zapi/core": "workspace:*",
    "@zapi/generator": "workspace:*",
    "commander": "^14.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.7.0"
  },
  "keywords": ["zapi", "cli", "generator", "prisma", "api"],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zapi-ts/zapi",
    "directory": "packages/cli"
  }
}
