{
  "name": "nevr",
  "version": "0.1.7",
  "description": "Nevr: The Zero-API framework. Define your entities, never write boilerplate again.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./adapters": {
      "import": "./dist/adapters/index.js",
      "types": "./dist/adapters/index.d.ts"
    },
    "./adapters/express": {
      "import": "./dist/adapters/express.js",
      "types": "./dist/adapters/express.d.ts"
    },
    "./adapters/hono": {
      "import": "./dist/adapters/hono.js",
      "types": "./dist/adapters/hono.d.ts"
    },
    "./drivers": {
      "import": "./dist/drivers/index.js",
      "types": "./dist/drivers/index.d.ts"
    },
    "./drivers/prisma": {
      "import": "./dist/drivers/prisma.js",
      "types": "./dist/drivers/prisma.d.ts"
    },
    "./plugins": {
      "import": "./dist/plugins/index.js",
      "types": "./dist/plugins/index.d.ts"
    },
    "./plugins/auth": {
      "import": "./dist/plugins/auth/index.js",
      "types": "./dist/plugins/auth/index.d.ts"
    },
    "./plugins/timestamps": {
      "import": "./dist/plugins/timestamps.js",
      "types": "./dist/plugins/timestamps.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@prisma/client": "^5.22.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "better-auth": "^1.4.0",
    "express": "^5.0.0",
    "hono": "^4.11.0",
    "tsup": "^8.5.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "peerDependencies": {
    "@prisma/client": ">=5.0.0",
    "better-auth": ">=1.0.0",
    "express": ">=4.0.0 || >=5.0.0",
    "hono": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "@prisma/client": {
      "optional": true
    },
    "better-auth": {
      "optional": true
    },
    "express": {
      "optional": true
    },
    "hono": {
      "optional": true
    }
  },
  "keywords": [
    "nevr",
    "zero-api",
    "entity-first",
    "type-safe",
    "crud-generator",
    "backend-automation",
    "typescript",
    "orm",
    "prisma",
    "express",
    "hono"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nevr-ts/nevr"
  }
}
